<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_nav_config"
    app:startDestination="@id/loginHostFragment">

    <fragment
        android:id="@+id/loginHostFragment"
        android:name="com.example.huangzhangmusic.fragment.login.LoginHostFragment"
        android:label="LoginHostFragment">

        <action
            android:id="@+id/to_loginPEFragment"
            app:destination="@id/loginPEFragment"
            app:enterAnim="@anim/slide_from_right_to_left_in"
            app:exitAnim="@anim/slide_from_right_to_left_out"
            app:popEnterAnim="@anim/slide_from_left_to_right_in"
            app:popExitAnim="@anim/slide_from_left_to_right_out"
            />

    </fragment>

    <fragment android:id="@+id/loginPEFragment"
        android:name="com.example.huangzhangmusic.fragment.login.LoginPEFragment"
        />
</navigation>